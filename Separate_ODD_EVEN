################################################

############################## Separate odd even

n <- c(0,1,2,3,4,5)
odd <- 0
even <- 0

for(i in n){
  
  ifelse(i%%2 == 0, even <- append(even,i), odd <- append(odd,i))
}

odd <- odd[2:length(odd)]
even <- even[2:length(even)]

print(odd)
print(even)
